<script>
// Selected size tracking
let selectedSize = null;

// Image gallery functionality
function changeImage(thumb) {
  const heroImage = document.getElementById('heroImage');
  heroImage.src = thumb.src;

  // Update active thumbnail
  document.querySelectorAll('.thumb').forEach(t => t.classList.remove('active'));
  thumb.classList.add('active');
}

// Size selection
function selectSize(btn) {
  // Remove selected from all
  document.querySelectorAll('.size-btn').forEach(b => b.classList.remove('selected'));

  // Add selected to clicked
  btn.classList.add('selected');
  selectedSize = btn.dataset.size;

  // Hide error if showing
  document.getElementById('sizeError').style.display = 'none';
}

// Handle buy now click
function handleBuyNow() {
  if (!selectedSize) {
    document.getElementById('sizeError').style.display = 'block';
    document.querySelector('.size-section').scrollIntoView({ behavior: 'smooth', block: 'center' });
    return;
  }

  // Proceed with checkout (placeholder)
  alert('Proceeding to checkout with size ' + selectedSize);
}

// Dynamic viewer count
function updateViewerCount() {
  const viewerEl = document.getElementById('viewerCount');
  const current = parseInt(viewerEl.textContent);
  const change = Math.floor(Math.random() * 5) - 2; // -2 to +2
  const newCount = Math.max(35, Math.min(65, current + change));
  viewerEl.textContent = newCount;
}

// Update viewers every 5-10 seconds
setInterval(updateViewerCount, 5000 + Math.random() * 5000);

// Sticky CTA visibility for mobile
let lastScrollY = 0;
function handleScroll() {
  const stickyCta = document.getElementById('stickyCta');
  const productInfo = document.querySelector('.product-info');

  if (window.innerWidth <= 768 && productInfo) {
    const rect = productInfo.getBoundingClientRect();
    if (rect.bottom < 0) {
      stickyCta.classList.add('visible');
    } else {
      stickyCta.classList.remove('visible');
    }
  }
}

window.addEventListener('scroll', handleScroll);
window.addEventListener('resize', handleScroll);

// SIZE 32 SOLD OUT AFTER 15 SECONDS
setTimeout(function() {
  const size32Btn = document.querySelector('.size-btn[data-size="32"]');

  if (size32Btn && !size32Btn.classList.contains('sold-out')) {
    // Mark as sold out
    size32Btn.classList.add('sold-out');
    size32Btn.disabled = true;
    size32Btn.onclick = null;

    // If size 32 was selected, deselect it
    if (selectedSize === '32') {
      size32Btn.classList.remove('selected');
      selectedSize = null;
    }

    // Show notification
    const notification = document.getElementById('soldoutNotification');
    document.getElementById('soldoutSize').textContent = '32';
    notification.classList.add('show');

    // Hide notification after 3 seconds
    setTimeout(function() {
      notification.classList.remove('show');
    }, 3000);
  }
}, 15000); // 15 seconds

// Initialize
document.addEventListener('DOMContentLoaded', function() {
  // Add fade-in animations
  const fadeElements = document.querySelectorAll('.fade-in');
  fadeElements.forEach(el => {
    el.style.opacity = '1';
    el.style.transform = 'translateY(0)';
  });
});
</script>

